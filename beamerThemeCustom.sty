\setbeamercolor{headline}{fg=ta3orange,bg=black}
\setbeamercolor{footline}{fg=ta3orange, bg=black}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=ta3orange}
\setbeamercolor{title in headline}{fg=ta3orange}
\setbeamercolor{author in headline}{fg=taaluminium}
\setbeamercolor{institute in headline}{fg=taaluminium}

\setbeamercolor{framesubtitle}{fg=ta3aluminium, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=taaluminium, bg=black}
\setbeamercolor{title in head/foot}{fg=ta2aluminium, bg=black}

\setbeamercolor*{normal text}{fg=tachameleon, bg=ta3gray}
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=taaluminium,bg=ta3orange}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=ta2aluminium}

\setbeamercolor*{example body}{fg=ta3aluminium,bg=black}
\setbeamercolor*{example text}{fg=ta3aluminium,bg=black}
\setbeamercolor*{example title}{bg=taaluminium,fg=ta2gray}

\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taaluminium}
\setbeamercolor{structure}{fg=ta3aluminium}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%% Biblio Styles
\renewcommand*{\bibfont}{\scriptsize}
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamercolor{bibliography entry author}{fg=taaluminium}
\setbeamercolor{bibliography entry title}{fg=taaluminium} 
\setbeamercolor{bibliography entry location}{fg=taaluminium} 
\setbeamercolor{bibliography entry note}{fg=taaluminium}  

\setbeamercolor{caption name}{fg=ta2gray}
\setbeamercolor{caption}{fg=ta2gray}

